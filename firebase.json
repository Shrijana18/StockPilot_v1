{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "v2": true,
    "regions": [
      "us-central1",
      "asia-south1"
    ],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/getHSNAndGST",
        "function": "generateHSNAndGST"
      },
      {
        "source": "/whatsapp/connect/callback",
        "function": "whatsappConnectCallback"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
