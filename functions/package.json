{
  "name": "functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Firebase",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "install:legacy": "npm install --legacy-peer-deps",
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "postinstall": "npm rebuild sharp --platform=linux --arch=x64 --force || echo 'sharp rebuild skipped'"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.9.0",
    "openai": "^4.28.0",
    "pdf-parse": "^1.1.1",
    "razorpay": "^2.9.6",
    "sharp": "^0.33.3",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
