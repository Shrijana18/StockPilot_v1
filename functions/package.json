  "engines": {
    "node": "20"
  },
  "type": "commonjs",
  "main": "index.js",
  "dependencies": {
    "@google-cloud/vision": "^5.2.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "openai": "^3.2.1",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
